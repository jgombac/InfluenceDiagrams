<UserControl x:Class="InfluenceDiagrams.Nodes.TbEventNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfluenceDiagrams.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="3" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" VerticalAlignment="Center" DockPanel.Dock="Left">Event</Label>

        <Grid Grid.Column="1" Width="60" Height="40" DockPanel.Dock="Right" MouseLeftButtonDown="MouseLeftDown">

            <Ellipse Stroke="Black" StrokeThickness="2" Fill="WhiteSmoke"/>


        </Grid>
    </Grid>
</UserControl>
