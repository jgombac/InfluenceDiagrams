<UserControl x:Class="InfluenceDiagrams.MToolbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfluenceDiagrams"
             xmlns:z="clr-namespace:InfluenceDiagrams.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Expander
            Header="Nodes"
            IsExpanded="True"
            Background="WhiteSmoke"
            >
            <Expander.Content>
                <Border BorderBrush="Black" BorderThickness="1">
                    <StackPanel Background="White">

                        <z:TbDecisionNode></z:TbDecisionNode>
                        <Separator VerticalAlignment="Stretch" Height="2" Background="LightGray"></Separator>
                        <z:TbEventNode></z:TbEventNode>
                        <Separator VerticalAlignment="Stretch" Height="2" Background="LightGray"></Separator>
                        <z:TbValueNode></z:TbValueNode>

                    </StackPanel>
                </Border>
            </Expander.Content>
        </Expander>
    </StackPanel>
</UserControl>
