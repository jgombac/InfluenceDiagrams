<UserControl x:Class="InfluenceDiagrams.PropertyControls.ValueDefinition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfluenceDiagrams.PropertyControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border BorderBrush="LightGray" BorderThickness="1"></Border>
    <StackPanel Orientation="Horizontal" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        
        <ComboBox x:Name="BetterCombo" SelectionChanged="ComboBox_SelectionChanged" VerticalAlignment="Center" Margin="15">

                <ComboBoxItem x:Name="Max" Content="max"></ComboBoxItem>
                <ComboBoxItem x:Name="Min" Content="min"></ComboBoxItem>

        </ComboBox>
        <Label VerticalAlignment="Center">is better</Label>
            
    </StackPanel>
    </Grid>
</UserControl>
