<Window x:Class="InfluenceDiagrams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfluenceDiagrams"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <DockPanel>
        

        <local:Toolbar DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center"></local:Toolbar>

        <Grid x:Name="MainGrid">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            

            <Rectangle Grid.ColumnSpan="2" Panel.ZIndex="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Fill="LightGray"/>
            

            <GridSplitter Grid.Column="0" Width="5" Height="Auto" VerticalAlignment="Stretch" Background="LightGray"></GridSplitter>

        </Grid>
    </DockPanel>
</Window>
