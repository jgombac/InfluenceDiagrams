<UserControl x:Class="InfluenceDiagrams.Nodes.TbDecisionNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfluenceDiagrams.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="3" VerticalAlignment="Center">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" VerticalAlignment="Center">Decision</Label>

        <Grid Grid.Column="1" Background="WhiteSmoke" Width="60" Height="40" MouseLeftButtonDown="MouseLeftDown">
            <Border BorderBrush="Black" BorderThickness="2"  Width="Auto" Height="Auto" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>



    </Grid>
</UserControl>
